---
layout: layouts/default
title: Test
---
<div class="container">
  <div class="row row-cols-1 row-cols-lg-2 gy-2">
    {% for user in users %}
      <div class="col">
        <div class="row gx-3">
          <div class="col-4 col-lg-3 d-flex justify-content-center align-items-center border border-end-0 rounded-start">
            <img class="img-fluid border rounded-circle" src="{{ user.picture.large }}" alt="{{ user.name.first }} {{ user.name.last }}">
          </div>
          <div class="col-8 col-lg-9 d-flex justify-content-center align-items-start flex-column ps-5 py-3 border rounded-end">
            <h2>{{ user.name.first }} {{ user.name.last }}</h2>
            <p>{{ user.email }}</p>
            <p>{{ user.phone }}</p>
            <p class="mb-0">{{ user.location.city }}, {{ user.location.state }}</p>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</div>
