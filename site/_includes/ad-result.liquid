<div class="row">
  <div class="col position-relative">
    <div class="border shadow rounded row g-0 overflow-hidden position-relative {% if removable %}mb-6{% else %}mb-5{% endif %}">
      <div class="col">
        <div class="row g-0 position-relative">
          {% if result.promoted %}
            <div class="border-end col-1 d-lg-flex d-none">
              {% render 'picture', picture: result.picture, company: result.company, promoted: result.promoted, icon-size: 'mdi-6'  %}
            </div>
          {% endif %}
          <div class="col">
            <div class="row g-0">
              <div class="ps-lg-6 col-10">
                <div class="d-flex">
                  {% if result.promoted %}
                    <div class="border border-top-0 border-start-0 rounded-bottom w-4-f d-flex d-lg-none flex-shrink-0">
                      {% render 'picture', picture: result.picture, company: result.company, promoted: result.promoted, icon-size: 'mdi-3'  %}
                    </div>
                  {% endif %}
                  <div class="d-flex flex-column flex-fill ps-lg-0 pt-4 {% if result.promoted %}ps-4{% else %}ps-5{% endif %}">
                    <div class="d-flex pe-3 pe-md-5">
                      <a class="h6 text-truncate-2 text-truncate-md-1 text-body text-decoration-none" title="{{ result.title }}" href="#">{{ result.title }}</a>
                    </div>
                    <div class="d-flex flex-column flex-md-row justify-content-md-start pe-3 pe-md-5">
                      <a class="d-flex align-items-center text-decoration-none text-body me-md-6 maxw-lg-21-f" href="#">
                        <i class="iconify mdi-1 text-primary me-2 flex-shrink-0" data-icon="mdi-briefcase-outline"></i>
                        <span class="text-truncate-1 maxw-md-20-f" title="{{ result.company }}">{{ result.company }}</span>
                      </a>
                      <a class="d-flex align-items-center text-decoration-none text-body" href="#">
                        <i class="iconify mdi-1 text-primary me-2 flex-shrink-0" data-icon="mdi-map-marker-outline"></i>
                        <span class="text-truncate-1 maxw-md-10-f" title="{{ result.city }}">{{ result.city }}</span>
                      </a>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-2 d-flex justify-content-end pt-4 pe-lg-6 pe-md-5 pe-4">
                {% if result.promoted %}
                  <span class="text-black-green-gray me-5 d-lg-inline-block d-none">Annons</span>
                {% endif %}
                {% render 'save', saved: result.saved %}
              </div>
            </div>
            <div class="row g-0">
              {% if result.tags.size > 0 %}
                <div class="pt-4 pb-lg-4 pb-md-3 ps-lg-6 col-md-10 px-4 px-md-5 px-lg-0">
                  <div class="d-flex justify-content-start flex-wrap h-md-2-f maxh-6-t overflow-hidden">
                    {% for tag in result.tags %}
                      {% render 'ui-tag', tag: tag, classes: 'me-4 mb-4' %}
                    {% endfor %}
                  </div>
                </div>
              {% endif %}
              <div class="col-12 col-lg-2 d-flex justify-content-end align-items-end pb-4 pe-lg-6 pe-md-5 pe-4">
                    <span class="d-inline-flex align-items-center me-auto me-lg-0 ps-md-5 ps-4 ps-lg-0">
                      <i class="iconify mdi-1 text-primary me-2 flex-shrink-0" data-icon="mdi-clock-time-five-outline"></i>
                      <small class="text-body">{{ result.days }} {% if result.days > 1 %}dagar{% else %}dag{% endif %} kvar</small>
                    </span>
                {% if result.promoted %}
                  <span class="text-black-green-gray d-inline-block d-lg-none">Annons</span>
                {% endif %}
              </div>
            </div>
          </div>
        </div>
      </div>
      {% if result.form %}
        <div class="frankly-form-indicator">
              <span class="frankly-form-indicator-icon">
                <i class="iconify text-black-green" data-icon="mdi-chevron-double-right"></i>
              </span>
        </div>
      {% endif %}
    </div>
    {% if removable %}
      <div class="position-absolute pointer rounded-circle bg-white border shadow top-0 end-0 mt-n4 me-2 w-2-f h-2-f d-flex justify-content-center align-items-center">
        <i class="iconify mdi-3 text-gray-500" data-icon="mdi-close"></i>
      </div>
    {% endif %}
  </div>
</div>
