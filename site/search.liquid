---
layout: layouts/default
title: Search
---
<div class="container pt-5">
  {% for result in search %}
    <div class="row">
      <div class="col">
        <div class="border shadow rounded mb-5 row g-0 overflow-hidden position-relative">
          <div class="col">
            <div class="row g-0 position-relative">
              {% if result.promoted %}
                <div class="border-end col-1 d-lg-flex d-none position-absolute bottom-0 top-0">
                  {% render 'picture', picture: result.picture, company: result.company, promoted: result.promoted  %}
                </div>
              {% endif %}
              <div class="col">
                <div class="row g-0">
                  <div class="py-4 ps-lg-6 {% if result.promoted %}col-lg-9 offset-lg-1{% else %}col-lg-10{% endif %}">
                    <div class="d-flex">
                      <a class="h6 text-truncate-2 text-truncate-md-1 text-body text-decoration-none" title="{{ result.title }}" href="#">{{ result.title }}</a>
                    </div>
                    <div>
                      <div class="d-flex justify-content-start">
                        <a class="d-flex align-items-center text-decoration-none text-body me-6" href="#">
                          <i class="iconify mdi-1 text-primary me-2" data-icon="mdi-briefcase-outline"></i>
                          <span class="text-truncate-1 maxw-sm-20-f" title="{{ result.company }}">{{ result.company }}</span>
                        </a>
                        <a class="d-flex align-items-center text-decoration-none text-body" href="#">
                          <i class="iconify mdi-1 text-primary me-2" data-icon="mdi-map-marker-outline"></i>
                          <span class="text-truncate-1" title="{{ result.city }}">{{ result.city }}</span>
                        </a>
                      </div>
                    </div>
                  </div>
                  <div class="col-lg-2 d-flex justify-content-end pt-4 pe-6">
                    {% if result.promoted %}
                      <span class="text-black-green-gray me-5">Annons</span>
                    {% endif %}
                    {% render 'save', saved: result.saved %}
                  </div>
                </div>
                <div class="row g-0">
                  <div class="py-4 ps-lg-6 {% if result.promoted %}col-lg-9 offset-lg-1{% else %}col-lg-10{% endif %}">
                    <div>
                      <div class="d-flex justify-content-start">
                        <a class="d-flex align-items-center text-decoration-none text-body me-6" href="#">
                          <i class="iconify mdi-1 text-primary me-2" data-icon="mdi-briefcase-outline"></i>
                          <span class="text-truncate-1 maxw-sm-20-f" title="{{ result.company }}">{{ result.company }}</span>
                        </a>
                      </div>
                    </div>
                  </div>
                  <div class="col-lg-2 d-flex justify-content-end align-items-end pb-4 pe-6">
                    <i class="iconify mdi-1 text-primary me-2" data-icon="mdi-clock-time-five-outline"></i>
                    <small class="text-body">{{ result.days }} {% if result.days > 1 %}dagar{% else %}dag{% endif %} kvar</small>
                  </div>
                </div>
              </div>
            </div>
          </div>
          {% if result.form %}
            <div class="frankly-form-indicator">
              <span class="frankly-form-indicator-icon">
                <i class="iconify text-black-green" data-icon="mdi-chevron-double-right"></i>
              </span>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  {% endfor %}
</div>
