---
layout: layouts/default
title: Search
---
<div class="container pt-5">
  {% for result in search %}
    <div class="row">
      <div class="col">
        <div class="border shadow rounded mb-5 row g-0 overflow-hidden position-relative">
          <div class="col">
            <div class="row g-0 position-relative">
              {% if result.promoted %}
                <div class="border-end col-1 d-lg-flex d-none">
                  {% render 'picture', picture: result.picture, company: result.company, promoted: result.promoted, icon-size: 'mdi-6'  %}
                </div>
              {% endif %}
              <div class="col">
                <div class="row g-0">
                  <div class="ps-lg-6 col-md-10">
                    <div class="d-flex">
                      {% if result.promoted %}
                        <div class="border border-top-0 border-start-0 rounded-bottom w-4-f d-flex d-lg-none flex-shrink-0">
                          {% render 'picture', picture: result.picture, company: result.company, promoted: result.promoted, icon-size: 'mdi-3'  %}
                        </div>
                      {% endif %}
                      <div class="d-flex flex-column flex-fill ps-4 ps-lg-0 pt-4">
                        <div class="d-flex pe-lg-5">
                          <a class="h6 text-truncate-2 text-truncate-md-1 text-body text-decoration-none" title="{{ result.title }}" href="#">{{ result.title }}</a>
                        </div>
                        <div class="d-flex justify-content-start">
                          <a class="d-flex align-items-center text-decoration-none text-body me-6" href="#">
                            <i class="iconify mdi-1 text-primary me-2" data-icon="mdi-briefcase-outline"></i>
                            <span class="text-truncate-1 maxw-sm-20-f" title="{{ result.company }}">{{ result.company }}</span>
                          </a>
                          <a class="d-flex align-items-center text-decoration-none text-body" href="#">
                            <i class="iconify mdi-1 text-primary me-2" data-icon="mdi-map-marker-outline"></i>
                            <span class="text-truncate-1" title="{{ result.city }}">{{ result.city }}</span>
                          </a>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="col-md-2 d-flex justify-content-end pt-4 pe-6">
                    {% if result.promoted %}
                      <span class="text-black-green-gray me-5 d-lg-inline-block d-none">Annons</span>
                    {% endif %}
                    {% render 'save', saved: result.saved %}
                  </div>
                </div>
                <div class="row g-0">
                  <div class="pt-4 pb-lg-4 pb-md-2 ps-lg-6 col-md-10 px-md-5 px-lg-0">
                    <div class="d-flex justify-content-start flex-wrap h-md-2-f overflow-hidden">
                      {% for tag in result.tags %}
                        {% render 'ui-tag', tag: tag, classes: 'me-4 mb-4' %}
                      {% endfor %}
                    </div>
                  </div>
                  <div class="col-lg-2 d-flex justify-content-end align-items-end pb-4 pe-6">
                    <span class="d-inline-flex align-items-center">
                      <i class="iconify mdi-1 text-primary me-2" data-icon="mdi-clock-time-five-outline"></i>
                      <small class="text-body">{{ result.days }} {% if result.days > 1 %}dagar{% else %}dag{% endif %} kvar</small>
                    </span>
                  </div>
                </div>
              </div>
            </div>
          </div>
          {% if result.form %}
            <div class="frankly-form-indicator">
              <span class="frankly-form-indicator-icon">
                <i class="iconify text-black-green" data-icon="mdi-chevron-double-right"></i>
              </span>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  {% endfor %}
</div>
